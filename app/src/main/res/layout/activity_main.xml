<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinder"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    </androidx.camera.view.PreviewView>
    <TextView
        android:id="@+id/loc_text"
        android:layout_width="161dp"
        android:layout_height="105dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="245dp"
        android:rotationX="0"
        android:textColor="@color/white"
        android:visibility="visible" />

    <TextView
        android:id="@+id/mag_text"
        android:layout_width="124dp"
        android:layout_height="69dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="280dp"
        android:layout_marginBottom="517dp" />

    <TextView
        android:id="@+id/dist_bear_text"
        android:layout_width="163dp"
        android:layout_height="110dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="249dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="-1dp" />

    <ImageView
        android:id="@+id/comp_img"
        android:layout_width="268dp"
        android:layout_height="226dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="-24dp"
        android:layout_marginTop="433dp"
        android:layout_marginEnd="167dp"
        app:srcCompat="@mipmap/compass_3_foreground" />

    <ImageView
        android:id="@+id/comp_pointer"
        android:layout_width="313dp"
        android:layout_height="239dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="-44dp"
        android:layout_marginTop="442dp"
        android:layout_marginBottom="24dp"
        android:visibility="gone"
        app:srcCompat="@mipmap/compass_pointer_foreground" />

    <ImageView
        android:id="@+id/target_pointer"
        android:layout_width="376dp"
        android:layout_height="311dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="-74dp"
        android:layout_marginTop="445dp"
        android:layout_marginEnd="109dp"
        android:layout_marginBottom="20dp"
        android:visibility="gone"
        app:srcCompat="@mipmap/target_poineter_foreground" />

    <Button
        android:id="@+id/button_enter_loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="288dp"
        android:layout_marginTop="550dp"
        android:layout_marginEnd="16dp"
        android:text="Enter Location" />

    <ImageView
        android:id="@+id/isTargetVisible"
        android:layout_width="99dp"
        android:layout_height="113dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:srcCompat="@android:drawable/ic_menu_mylocation" />

    <TextView
        android:id="@+id/rot_text"
        android:layout_width="209dp"
        android:layout_height="82dp"
        android:text="TextView"
        android:translationX="190dp"
        android:translationY="450dp" />


</RelativeLayout>